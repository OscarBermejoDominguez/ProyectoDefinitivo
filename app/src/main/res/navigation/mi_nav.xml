<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mi_nav"
    app:startDestination="@id/fragmentoOscar">

    <fragment
        android:id="@+id/fragmentoOscar"
        android:name="com.oscarbermejo.proyectodefinitivo.fragments.FragmentoOscar"
        android:label="fragment_fragmento_oscar"
        tools:layout="@layout/fragment_fragmento_oscar" >
        <action
            android:id="@+id/action_fragmentoOscar_to_fragmentUsuario"
            app:destination="@id/fragmentUsuario"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/fragment_close_exit" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.oscarbermejo.proyectodefinitivo.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/fragmentUsuario"
        android:name="com.oscarbermejo.proyectodefinitivo.fragments.FragmentUsuario"
        android:label="fragment_usuario"
        tools:layout="@layout/fragment_usuario" >
        <action
            android:id="@+id/action_fragmentUsuario_to_fragmentoOscar"
            app:destination="@id/fragmentoOscar"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/fragment_close_exit" />
    </fragment>
</navigation>